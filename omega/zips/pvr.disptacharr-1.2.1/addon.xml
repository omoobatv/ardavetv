<?xml version="1.0" encoding="UTF-8"?>
<addon id="pvr.dispatcharr" version="1.1.0" name="Dispatcharr PVR Client" provider-name="Denunciadeiro">
  <requires>
    <import addon="kodi.binary.instance.pvr" version="8.2.0"/>
  </requires>

  <extension
    point="kodi.pvrclient"
    library_windows="pvr.dispatcharr.dll"
    library_osx="pvr.dispatcharr.dylib"
    library_linux="pvr.dispatcharr.so.10"
    library_android="libpvr.dispatcharr.so"/>

  <extension point="xbmc.addon.metadata">
    <summary>PVR addon for Dispatcharr</summary>
    <description>Connect to Dispatcharr PVR backend</description>
    <disclaimer>This addon is provided as-is without warranty</disclaimer>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/northernpowerhouse/pvr.dispatcharr</source>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.png</fanart>
      <logo>logo.png</logo>
    </assets>
    <news>First Release</news>
  </extension>
</addon>
